<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hatchers.hedgewar.Menus.arogya_feedback.Arogya_Feedback_Fragment">

    <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="54dp"
    app:title="आरोग्य बँक कार्यकर्ता अभिप्राय "
    app:titleTextColor="@color/white"
    android:background="@color/colorPrimary"
    android:id="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back_arrow"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/btn_back"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="आरोग्य बँक कार्यकर्ता अभिप्राय  "
                android:layout_marginLeft="15dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:layout_marginTop="70dp"
   android:text="आरोग्य बँक अभिप्राय "
    android:id="@+id/title"
    android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/question_layout"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/title">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रश्न क्र. १ :"
            android:padding="5dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="नवीन काय शिकलो ?"
            android:padding="5dp"
            android:textSize="20dp"/>


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="उत्तर :"
        android:maxLines="7"
        android:lines="7"
        android:id="@+id/ans_edt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/question_layout"/>


    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/ans_edt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="पुढे "/>



    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="थांबा "/>




</RelativeLayout>
