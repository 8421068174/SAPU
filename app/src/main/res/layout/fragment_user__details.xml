<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:gravity="center"
    tools:context="com.hatchers.hedgewar.user_login.User_Details_Fragment">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:contentInsetStart="4dp"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:title="आपली माहिती"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:id="@+id/userDetailsToolbar">


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_account_circle_black_24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="नाव "
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center|bottom"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:id="@+id/name_Txt"/>

    </FrameLayout>

    <android.support.v7.widget.CardView
        app:cardElevation="1dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">


            <TextView
                android:drawableLeft="@drawable/date_of_birth"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="जन्मदिनांक  "
                android:textSize="16dp"
                android:id="@+id/date_of_birth"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorDarkgray"/>



            <TextView
                android:drawableLeft="@drawable/mobile_number"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="मोबाइल नंबर  "
                android:textSize="15dp"
                android:id="@+id/mobile_number"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorDarkgray"/>



        <TextView
                android:drawableLeft="@drawable/village_name"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="गावाचे नाव  "
                android:textSize="16dp"
                android:id="@+id/village_name"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorDarkgray"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
